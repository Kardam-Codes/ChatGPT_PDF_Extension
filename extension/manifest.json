{
  "manifest_version": 3,
  "name": "MD to Perfect PDF",
  "version": "1.0.0",
  "version_name": "1.0.0",
  "description": "Turn Markdown into clean, print-ready PDFs with live preview and export controls.",
  "minimum_chrome_version": "114",
  "permissions": ["storage"],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://chatgpt-pdf-extension.onrender.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "MD to Perfect PDF"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"    
  }
}
